    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#02FFFFFF">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"

            android:layout_height="350dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/tile_img"
                android:background="@drawable/house"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:textColor="#FFFFFF"
                android:background="#3342FF"
                android:text="Residentional Banglow"
                android:textAlignment="center"
                android:paddingTop="7dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/inventory"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:background="#FF5733"
                android:layout_toRightOf="@+id/category"
                android:layout_marginLeft="10dp"
                android:text="For Sale"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:paddingTop="7dp"
                />
            <TextView
                android:id="@+id/price_budget"
                android:layout_below="@+id/cat_txt"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:background="#FFFFFF"
                android:text="Rs.32.00 Lac"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:layout_marginVertical="160dp"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textColor="#3342FF"
                 />
    <android.support.v7.widget.CardView

        app:cardBackgroundColor="@color/black"
        android:alpha="0.9"
        android:layout_toLeftOf="@+id/cardchat"
        android:id="@+id/likecard"
        android:layout_marginTop="155dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/like"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
        android:src="@drawable/ic_action_like"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardchat"
        app:cardBackgroundColor="@color/black"
        android:alpha="0.9"
        android:layout_marginTop="155dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_chat"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/propert_image"
                    android:layout_width="20sp"
                    android:layout_height="20dp"
                    android:src="@drawable/location"
                    android:layout_marginTop="265dp"

                    />
                <TextView
                    android:id="@+id/City"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="260dp"
                    android:text="Karachi,sindh"
                    android:paddingTop="7dp"
                    android:paddingLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/propert_image"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/City"
                    android:layout_marginTop="260dp"
                    android:paddingRight="20dp"
                    android:paddingTop="7dp"
                    android:text="5 marlas"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tv_bed"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/img_bathroom"
                    android:layout_marginTop="260dp"
                    android:text="5"
                    android:textSize="15dp"
                    android:paddingTop="7dp"
                    />

                <ImageView
                    android:id="@+id/img_bed"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="267dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/bed" />
                <TextView
                    android:id="@+id/tv_bathroom"
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/img_garage"
                    android:layout_marginTop="260dp"
                    android:text="5"
                    android:textSize="15dp"
                    android:paddingTop="7dp"
                    />

                <ImageView
                    android:id="@+id/img_bathroom"
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="267dp"
                    android:layout_toRightOf="@+id/tv_bathroom"
                    android:src="@drawable/bathroom" />
                <TextView
                    android:id="@+id/tv_garage"
                    android:layout_toRightOf="@id/tv_area"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="260dp"
                    android:text="1"
                    android:textSize="15dp"
                    android:paddingTop="7dp"
                    />
                <ImageView
                    android:id="@+id/img_garage"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/garage"
                    android:layout_toRightOf="@+id/tv_garage"
                    android:layout_marginTop="267dp"
                    />
                <ImageView
                    android:id="@+id/imageview_Profile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tab_person"
                    android:layout_marginTop="295dp"
                    android:background="#000"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="290dp"
                    android:paddingTop="7dp"
                    android:textSize="17dp"
                    android:layout_marginStart="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/imageview_Profile"
                    android:text="Res"
                    android:layout_marginLeft="5dp" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:paddingTop="7dp"
                    android:layout_alignParentRight="true"
                    android:text="2 month"
                    android:textSize="17sp"
                    android:layout_marginTop="290dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>