<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inside_relative"
        android:layout_below="@id/toolbar"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profileimage"
        android:src="@mipmap/ic_launcher"/>


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileimage"
            android:textSize="20dp"
            android:text="Name"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/view_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="hello"
            android:spinnerMode="dialog"
            android:background="@drawable/bt_shape"
            android:layout_below="@+id/text"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_spinner"
            android:textSize="20dp"
            android:text="Email Address"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/corner_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="hello"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_shape"
            android:layout_below="@id/text1" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/corner_spinner"
            android:textSize="20dp"
            android:text="Company Name"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/facing_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:text="hello"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_shape"
            android:layout_below="@id/text2" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facing_spinner"
            android:textSize="20dp"
            android:text="Phone Number"
            android:textColor="@color/black"/>
         <EditText
             android:id="@+id/floor_spinner"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:textSize="24dp"
             android:textColor="@color/black"
             android:text="hello"
             android:spinnerMode="dialog"
             android:layout_marginTop="10dp"
             android:background="@drawable/bt_shape"
             android:layout_below="@id/text3" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floor_spinner"
            android:textSize="20dp"
            android:text="Number of Agent"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/agent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="hello"
            android:spinnerMode="dialog"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_shape"
            android:layout_below="@id/text4" />
    </RelativeLayout>
</RelativeLayout>