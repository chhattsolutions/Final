<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#02FFFFFF">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/tile_img"
        android:background="@drawable/house"/>

    <TextView
        android:id="@+id/cat_txt"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:textColor="#FFFFFF"
        android:background="#3342FF"
        android:text="Residentional Banglow"
        android:textAlignment="center"
        android:paddingTop="7dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/type_txt"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="210dp"
        android:background="#FF5733"
        android:layout_marginLeft="10dp"
        android:text="For Sale"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:paddingTop="7dp"
        />
    <TextView
        android:id="@+id/price"
        android:layout_below="@+id/cat_txt"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        android:text="Rs.32.00 Lac"
        android:layout_marginVertical="160dp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textColor="#3342FF"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/markup"
            android:layout_width="20sp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tab_infor"
            android:layout_marginTop="255dp"
            android:background="#000"
            />
            <TextView
                android:id="@+id/tv_city"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="250dp"
            android:text="Karachi,sindh"
            android:paddingTop="7dp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/markup"
            />
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/tv_city"
                android:layout_marginTop="250dp"
                android:paddingTop="7dp"
                android:text="5 marlas"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/img_bed"
                android:layout_marginTop="250dp"
                android:text="5"
                android:textSize="15dp"
                android:paddingTop="7dp"
                />
            <ImageView
                android:id="@+id/img_bed"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_float_add_group"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="257dp"
                android:background="#000"
                android:layout_alignParentRight="true" />
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tab_person"
                android:layout_marginTop="277dp"
                android:background="#000"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="270dp"
                android:paddingTop="7dp"
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@+id/img_profile"
                android:text="Res"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:text="2 month"
                android:textSize="17sp"
                android:layout_marginTop="277dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>