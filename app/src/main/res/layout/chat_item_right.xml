<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relLayout1"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_image"
            android:visibility="gone"/>
        <android.support.v7.widget.CardView
            android:id="@+id/lyt_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            app:cardCornerRadius="15dip"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="02dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:background="@drawable/rounded_corner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/linear1"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/show_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messsage content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="normal"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:hint="02:30"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/txt_seen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="read"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/lyt_thread1"
            android:layout_width="100dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dip"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@drawable/rounded_corner1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/show_Image"
                android:layout_width="100dp"
                android:focusedByDefault="false"
                android:layout_height="200dp"/>
        </LinearLayout>
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >

             <TextView
                 android:id="@+id/text_time1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_toLeftOf="@+id/txt_seen1"
                 android:gravity="center"
                 android:hint="02:30"
                 android:layout_below="@+id/show_Image"
                 android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                 android:textColor="#FFFFFF"
                 tools:ignore="NotSibling" />

             <TextView
                 android:id="@+id/txt_seen1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                 android:gravity="center"
                 android:text="read"
                 android:layout_below="@+id/show_Image"
                 android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                 android:textColor="#FFFFFF"
                 tools:ignore="NotSibling" />

         </RelativeLayout>
        </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/show_video"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

