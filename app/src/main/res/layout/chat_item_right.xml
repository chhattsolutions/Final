        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="15dip"
            app:cardElevation="2dp"
            android:id="@+id/voic_card"
            android:visibility="visible"
            app:cardUseCompatPadding="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner1"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:background="@drawable/rounded_corner1"
                    android:text=""
                    android:src="@drawable/ic_play"
                    />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:id="@+id/duration"
                    android:layout_marginRight="10dp"
                    android:text="01:00" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/Map_link_card"
            android:layout_width="100dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dip"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="@drawable/rounded_corner1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/Map_icon"
                    android:layout_width="100dp"
                    android:focusedByDefault="false"
                    android:layout_height="100dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/Map_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:layout_toLeftOf="@+id/txt_seen1"
                    android:gravity="center"
                    android:hint="Link"
                    android:layout_below="@+id/show_Image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="#FFFFFF"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/text_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txt_seen1"
                    android:gravity="center"
                    android:hint="02:30"
                    android:layout_below="@+id/show_Image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="#FFFFFF"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/txt_seen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="read"
                    android:layout_below="@+id/show_Image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="#FFFFFF"
                    tools:ignore="NotSibling" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>